@model DashboardVM

<div class="container p-3">
	<div class="row g-5 justify-content-around">
		<div class="col-5 bg-body-tertiary p-5">
			<div class="row">
				<div class="col">
					<h1 class="m-0">@Model.Categories</h1>
					<p class="m-0 text-dark fs-4">Categories</p>
				</div>
				<div class="col pt-3 text-end">
					<a class="btn btn-outline-dark rounded-5" asp-area="Admin" asp-controller="Category" asp-action="Index">
						<i class="fa-solid fa-chevron-right fs-3"></i>
					</a>
				</div>
			</div>
		</div>
		<div class="col-5 bg-body-tertiary p-5">
			<div class="row">
				<div class="col">
					<h1 class="m-0">@Model.SubCategories</h1>
					<p class="m-0 text-dark fs-4">SubCategories</p>
				</div>
				<div class="col pt-3 text-end">
					<a class="btn btn-outline-dark rounded-5" asp-area="Admin" asp-controller="SubCategory" asp-action="Index">
						<i class="fa-solid fa-chevron-right fs-3"></i>
					</a>
				</div>
			</div>
		</div>
		<div class="col-5 bg-body-tertiary p-5">
			<div class="row">
				<div class="col">
					<h1 class="m-0">@Model.Products</h1>
					<p class="m-0 text-dark fs-4">Products</p>
				</div>
				<div class="col pt-3 text-end">
					<a class="btn btn-outline-dark rounded-5" asp-area="Admin" asp-controller="Product" asp-action="Index">
						<i class="fa-solid fa-chevron-right fs-3"></i>
					</a>
				</div>
			</div>
		</div>
		<div class="col-5 bg-body-tertiary p-5">
			<div class="row">
				<div class="col">
					<h1 class="m-0">@Model.Orders</h1>
					<p class="m-0 text-dark fs-4">Orders</p>
				</div>
				<div class="col pt-3 text-end">
					<a class="btn btn-outline-dark rounded-5" asp-area="Admin" asp-controller="Order" asp-action="Index">
						<i class="fa-solid fa-chevron-right fs-3"></i>
					</a>
				</div>
			</div>
		</div>

		<div class="col-5 bg-body-tertiary p-5">
			<div class="row">
				<div class="col">
					<h1 class="m-0">@Model.Users</h1>
					<p class="m-0 text-dark fs-4">Users</p>
				</div>
				<div class="col pt-3 text-end">
					<a class="btn btn-outline-dark rounded-5" asp-area="Admin" asp-controller="User" asp-action="Index">
						<i class="fa-solid fa-chevron-right fs-3"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

