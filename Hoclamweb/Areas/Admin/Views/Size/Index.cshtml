@model SizeVM

<div class="card shadow rounded-0">
	<div class="container p-0 bg-body-secondary">
		<div class="row ms-2 mt-2">
			<a id="subCatLink" asp-area="Admin" asp-controller="Product" asp-action="Index" class="col-2 border p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">Product</h5>
			</a>
			<a id="subCatLink" asp-area="Admin" asp-controller="ProductDetail" asp-action="Index" class="col-2 border p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">ProductDetail</h5>
			</a>
			<a asp-area="Admin" asp-controller="Size" asp-action="Index" class="col-2 bg-white border border-2 border-bottom-0 p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">Size</h5>
			</a>
			<a id="subCatLink" asp-area="Admin" asp-controller="Color" asp-action="Index" class="col-2 border p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">Color</h5>
			</a>
		</div>
	</div>


	<div class="card-body p-3">
		<div class="mb-3">
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-success rounded-0" style="text-transform:none;" data-bs-toggle="modal" data-bs-target="#exampleModal">
				<i class="bi bi-plus-circle"></i> Create New Size
			</button>

			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h1 class="modal-title fs-5" id="exampleModalLabel">Create New Size</h1>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<form method="post" class="row p-2">
							<div class="modal-body">
								<div>
									<label asp-for="@Model.Size.Name" class="mb-1"></label>
									<input asp-for="@Model.Size.Name" class="form-control" required/>
									<span asp-validation-for="@Model.Size.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-outline-dark rounded-0" style="text-transform:none;" data-bs-dismiss="modal">Close</button>
								<button asp-controller="Size" asp-action="Create" type="submit" class="btn btn-success rounded-0" style="text-transform:none;">Create</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		<table id="myTable" class="table table-striped table-responsive table-bordered border">
			<thead>
				<tr>
					<th class="text-center" width="10%">
						Id
					</th>
					<th class="text-center">
						Name
					</th>
					<th class="text-center" width="10%">

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var size in Model.Sizes.OrderBy(u => u.Id))
				{
					<tr>
						<td class="text-center">
							@size.Id
						</td>
						<td>
							@size.Name
						</td>
						<td class="text-center align-middle">
							<div class="text-center" role="group">
								<!-- Button trigger edit modal -->
								<button class="text-decoration-none text-warning border-0" data-bs-toggle="modal" data-bs-target="#@size.Id+UpdateModal">
									<i class="bi bi-pencil-square fs-5"></i>
								</button>
								<!-- edit Modal -->
								<div class="modal fade" id="@size.Id+UpdateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header">
												<h1 class="modal-title fs-5" id="exampleModalLabel">Create New Size</h1>
												<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
											</div>
											<form method="post" asp-action="Update" class="row p-2">
												<div class="modal-body">
													<input asp-for="@size.Id" hidden />
													<div>
														<label asp-for="@size.Name" class="mb-1"></label>
														<input asp-for="@size.Name" class="form-control" required />
														<span asp-validation-for="@size.Name" class="text-danger"></span>
													</div>
												</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-outline-dark rounded-0" style="text-transform:none;" data-bs-dismiss="modal">Close</button>
													<button asp-controller="Size" asp-action="Update" type="submit" class="btn btn-warning rounded-0" style="text-transform:none;">Cập nhật</button>
												</div>
											</form>
										</div>
									</div>
								</div>
								<!-- Button trigger delete modal -->
								<button class="text-decoration-none text-danger border-0" data-bs-toggle="modal" data-bs-target="#@size.Id+DeleteModal">
									<i class="bi bi-trash3 fs-5"></i>
								</button>
								<!-- delete Modal -->
								<div class="modal fade" id="@size.Id+DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header">
												<h1 class="modal-title fs-5" id="exampleModalLabel">Create New Size</h1>
												<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
											</div>
											<form method="post" asp-action="Delete" class="row p-2">
												<div class="modal-body">
													<input asp-for="@size.Id" hidden />
													<div>
														<label asp-for="@size.Name" class="mb-1"></label>
														<input asp-for="@size.Name" class="form-control" disabled />
														<span asp-validation-for="@size.Name" class="text-danger"></span>
													</div>
												</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-outline-dark rounded-0" style="text-transform:none;" data-bs-dismiss="modal">Close</button>
													<button asp-controller="Size" asp-action="Delete" asp-route-id="@size.Id" type="submit" class="btn btn-danger rounded-0" style="text-transform:none;">Xóa</button>
												</div>
											</form>

										</div>
									</div>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>




	</div>



</div>


