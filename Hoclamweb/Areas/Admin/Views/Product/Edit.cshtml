@model ProductVM

<div class="card shadow rounded-0">
	<div class="card-header bg-body-secondary ml-0 py-1">
		<div class="row">
			<div class="col-12">
				<h5 class="p-2">Edit Product</h5>
			</div>
		</div>
	</div>
	<div class="card-body p-3">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Product.Id" hidden />
			<div class="">
				<p class="ms-2 fw-medium">Create Time: @Model.Product.CreateTime</p>
			</div>
			<div class="">
				<label asp-for="Product.Name" class="ms-2"></label>
				<input asp-for="Product.Name" class="form-control" />
				<span asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="">
				<div class="row mt-3">
					<div class="col">
						<label asp-for="Product.SubCategory.Name"></label>
						<select asp-for="Product.SubCategoryId" asp-items="@Model.ProductList" class="form-select">
							<option disabled selected>--Select Category Detail--</option>
						</select>
						<span asp-validation-for="Product.SubCategoryId" class="text-danger"></span>
					</div>
					<div class="col">
						<label asp-for="Product.Color"></label>
						<select asp-for="Product.ColorId" asp-items="@Model.ColorList" class="form-select">
							<option disabled selected>--Select Color--</option>
						</select>
						<span asp-validation-for="Product.ColorId" class="text-danger"></span>
					</div>
					<div class="col">
						<label asp-for="Product.Gender"></label>
						<select asp-for="Product.Gender" class="form-select">
							<option disabled selected>--Select Gender-</option>
							<option value="0">Man</option>
							<option value="1">Women</option>
						</select>
						<span asp-validation-for="Product.Gender" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="">
				<div class="row mt-3">
					<div class="col">
						<label asp-for="Product.Price"></label>
						<input asp-for="Product.Price" type="number" class="form-control" />
						<span asp-validation-for="Product.Price" class="text-danger"></span>
					</div>
					<div class="col">
						<label asp-for="Product.Saleoff"></label>
						<input asp-for="Product.Saleoff" type="number" class="form-control" />
						<span asp-validation-for="Product.Saleoff" class="text-danger"></span>
					</div>
					<div class="col">
						<label class="ms-2">Image</label>
						<input name="files" type="file" multiple class="form-control" />
					</div>
				</div>
			</div>
			<div class="row mt-3">
						@if (Model.Images != null)
						{
							@foreach (var image in Model.Images)
							{
								<div class="col-2">
									<img src="@image.ImageUrl" class="img-fluid border"/>
								</div>
							}
						}
			</div>
			<div class="mt-3">
				<label asp-for="Product.Description" class="ms-2"></label>
				<textarea asp-for="Product.Description" class="form-control"></textarea>
				<span asp-validation-for="Product.Description" class="text-danger"></span>
			</div>


			<div class="row pt-3">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-warning form-control">Update</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark form-control">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}