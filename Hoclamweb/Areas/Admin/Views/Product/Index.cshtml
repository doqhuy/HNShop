@model ProductVM

<div class="card shadow rounded-0">
	<div class="container p-0 bg-body-secondary">
		<div class="row ms-2 mt-2">
			<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="col-2 bg-white border border-2 border-bottom-0 p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">Product</h5>
			</a>
			<a id="subCatLink" asp-area="Admin" asp-controller="ProductDetail" asp-action="Index" class="col-2 border p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">ProductDetail</h5>
			</a>
			<a id="subCatLink" asp-area="Admin" asp-controller="Size" asp-action="Index" class="col-2 border p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">Size</h5>
			</a>
			<a id="subCatLink" asp-area="Admin" asp-controller="Color" asp-action="Index" class="col-2 border p-0 text-decoration-none text-dark rounded-top-3">
				<h5 class="px-4 py-2 m-0">Color</h5>
			</a>
		</div>
	</div>
	<div class="card-body p-3">
		<div class="mb-3">
			<a asp-controller="Product" asp-action="Create" class="btn btn-success py-2" style="text-transform:none">
				<i class="bi bi-plus-circle"></i>
				Create Product
			</a>
		</div>
		<table id="myTable" class="table table-striped table-responsive table-bordered border">
			<thead>
				<tr>
					<th class="text-center" width="5%">
						Id
					</th>
					<th class="text-center" width="10%">
						Image
					</th>
					<th class="text-center">
						Name
					</th>
					<th class="text-center text-nowrap">
						SubCategory
					</th>
					<th class="text-center text-nowrap">
						Color
					</th>
					<th class="text-center" width="5%">
						Gender
					</th>
					<th class="text-center">
						Price
					</th>
					<th class="text-center" width="5%">
						SaleOff
					</th>
					<th class="text-center" width="5%">

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.Products)
				{
					<tr>
						<td>
							@obj.Id
						</td>
						<td>
							@foreach (var image in obj.Images)
							{
								<img src="@image.ImageUrl" class="img-fluid" />
								break;
							}
						</td>
						<td>
							@obj.Name
						</td>
						<td>
							@obj.SubCategory.Name
						</td>
						<td>
							@obj.Color.Name
						</td>
						<td>
							@obj.Gender
						</td>
						<td>
							@obj.Price.ToString("#,##0").Replace(",", ".")<span> đ</span>
						</td>
						<td>
							@obj.Saleoff
						</td>
						<td class="text-center align-middle">
							<div class="text-center" role="group">
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="text-decoration-none text-warning rounded">
									<i class="bi bi-pencil-square fs-5"></i>
								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="text-decoration-none text-danger rounded">
									<i class="bi bi-trash3 fs-5"></i>
								</a>
							</div>
						</td>
					</tr>
				}

			</tbody>
		</table>

	</div>
</div>


