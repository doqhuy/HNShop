				{
					<div class="mb-2">
						<a asp-area="Customer" asp-controller="SubCategory" asp-action="Index" asp-route-category="@subCategory.Category.UrlName" asp-route-urlName="@subCategory.UrlName" class="text-dark text-decoration-none arrow-hover">
							<span class="mx-2"><i class="fa-solid fa-angle-right fs-8"></i></span> @subCategory.Name
						</a>
					</div>
				}
			</div>
			<div class="col-2">
				<div class="mb-2"><span class="fw-bold" style="border-bottom:1px solid black;">Quần</span></div>
