@model CatsAndSubCatsVCVM

<li class="nav-item py-3 shop-dropdown">
	<a class="nav-link text-dark px-3 ms-2 fs-7" asp-area="Customer" asp-controller="Category" asp-action="Index" asp-route-urlName="ready-to-wear">
		TRANG PHỤC
	</a>
	@*dropdown nav*@
	<div id="dropdown-shop" class="py-5 ps-5 font-cabin">
